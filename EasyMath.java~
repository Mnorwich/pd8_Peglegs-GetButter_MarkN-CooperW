import java.util.*;
import java.io.*;

public class EasyMath implements MiniGame{
    public EasyMath(){
    }
    
    public boolean runMe(){
	Scanner sc = new Scanner(System.in);
	int n1 = (int)(Math.random() *100);
	int n2 = (int)(Math.random() *100);
	int opp= (int)(Math.random() *4);
	if(opp == 0){
	    System.out.println(n1 + " + " + n2 + " = ?");
	    String ans = sc.nextLine();
	    if(Integer.parseInt(ans) == n1 + n2){
		return true;
	    }
	    return false;
	}else if(opp == 1){
	    System.out.println(n1 + " - " + n2 + " = ?");
	    String ans = sc.nextLine();
	    if(Integer.parseInt(ans) == n1 - n2){
		return true;
	    }
	    return false;
	}else if(opp == 2){
	    System.out.println(n1 + " * " + n2 + " = ?");
	    String ans = sc.nextLine();
	    if(Integer.parseInt(ans) == n1 * n2){
		return true;
	    }
	    return false;
	} else{
	    System.out.println(n1 + " / " + n2 + " = ?");
	    String ans = sc.nextLine();
	    if(Integer.parseInt(ans) == n1 / n2){
		return true;
	    }
	    return false;
	}
	
    }
}
